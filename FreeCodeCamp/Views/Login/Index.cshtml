@model IEnumerable<Login>
@{
    ViewData["Title"] = "Index";
}



<div class="container p-3">
    <div class=row pt-4>
        <div class="col-6">
            <h2 class="text-primary">Registered Users</h2>
        </div>
        <div class="col-6  text-end">
            <a asp-controller="Login" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-person-plus-fill"></i> &nbsp; Create New User
            </a>
        </div>
    </div>
</div>
<br />

<table class="table table-bordered table-striped" width="100%">
    <thead>
        <tr>
            <th>
                First Name
            </th>
            <th>
                Last Name
            </th>
            <th>
                Email
            </th>
            <th>
                Gender
            </th>
            <th>
                Date of Birth
            </th>
            <th>

            </th>
        </tr>
    </thead>
    <tbody>

        @foreach (var obj in Model)
        {
                <tr>
                    <td width="20%">
                    @obj.FirstName
                    </td>
                    <td width="20%">
                    @obj.LastName
                    </td>
                    <td width="20%">
                    @obj.Email
                        </td>
                    <td width="20%">
                    @obj.Gender
                        </td>
                    <td width="20%">
                    @obj.DOB
                        </td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                                <a asp-controller="Login" asp-action="Edit" asp-route-id="@obj.ID"
                            class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i>Edit</a>
                                    <a asp-controller="Login" asp-action="Delete" asp-route-id="@obj.ID"
                            class="btn btn-danger mx-2"><i class="bi bi-trash-fill"></i>Delete</a>
                        </div>
                    </td>
                </tr>
        }

    </tbody>
</table>









